<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top: info + move list + controls (top half) -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvGameInfo"
            android:text="@string/white_to_move"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvMoves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:padding="4dp" />
        </ScrollView>

        <Button
            android:id="@+id/btnResign"
            android:layout_marginTop="8dp"
            android:text="@string/btnResgin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- New: Post-game controls (hidden by default from code) -->
        <LinearLayout
            android:id="@+id/post_game_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:visibility="gone">

            <Button
                android:id="@+id/btnPlayAgain"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btnPlayAgain" />

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btnMainMenu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btnMainMenu" />
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom: board area (bottom half) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:padding="8dp">

        <com.chesskel.ui.game.ChessBoardView
            android:id="@+id/chessBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </FrameLayout>
</LinearLayout>