<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título app -->
        <TextView
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Subtítulo: Crear cuenta -->
        <TextView
            android:layout_marginTop="8dp"
            android:text="@string/createlabel"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Nombre de usuario -->
        <EditText
            android:id="@+id/etName"
            android:layout_marginTop="24dp"
            android:hint="@string/usernamelabel"
            android:inputType="textPersonName"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_marginTop="12dp"
            android:hint="@string/emaillabel"
            android:inputType="textEmailAddress"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Password -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_marginTop="12dp"
            android:hint="@string/passwordlabel"
            android:inputType="textPassword"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Confirmar password -->
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_marginTop="12dp"
            android:hint="@string/confirm_password_label"
            android:inputType="textPassword"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Botón principal: Crear cuenta -->
        <Button
            android:id="@+id/btnCreate"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_primary"
            android:text="@string/creationlabel"
            android:textAllCaps="true"
            android:textColor="@color/btn_text"
            android:textStyle="bold" />

        <!-- Botón secundario: Ya tengo cuenta / Ir a login -->
        <Button
            android:id="@+id/btnGoLogin"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_primary_normal"
            android:text="@string/haveAccount"
            android:textAllCaps="true"
            android:textColor="@color/btn_text"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>