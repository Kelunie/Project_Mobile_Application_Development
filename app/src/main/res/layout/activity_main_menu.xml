<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="32dp"
    android:paddingBottom="32dp">

    <!-- Fila superior: icono grande + botón de tema -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <FrameLayout
            android:layout_width="112dp"
            android:layout_height="112dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_icon_glow" />

            <ImageView
                android:id="@+id/ivAppIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_icon_tile"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_main_menu" />
        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnTheme"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_toggle_button"
            android:padding="8dp"
            android:contentDescription="@string/theme_toggle"
            app:tint="@color/btn_icon_tint"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Título debajo de la fila superior -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CHESSKEL"
        android:textAllCaps="true"
        android:textSize="34sp"
        android:letterSpacing="0.2"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary" />

    <View
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_title_underline" />

    <!-- Opciones de menú -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/option_ai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_ai"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_icon_chip"
                    android:padding="8dp"
                    app:tint="@color/btn_icon_tint"
                    android:src="@drawable/ic_smart_toy" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/playervsia"
                    android:textAllCaps="true"
                    android:letterSpacing="0.15"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/btn_text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_pvp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_btn_pvp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_icon_chip"
                    android:padding="8dp"
                    app:tint="@color/btn_icon_tint"
                    android:src="@drawable/ic_groups" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/playervsplayer"
                    android:textAllCaps="true"
                    android:letterSpacing="0.15"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/btn_text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_btn_profile"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_icon_chip"
                    android:padding="8dp"
                    app:tint="@color/btn_icon_tint"
                    android:src="@drawable/ic_person" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/profilelabel"
                    android:textAllCaps="true"
                    android:letterSpacing="0.15"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/btn_text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_learn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_btn_profile"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_icon_chip"
                    android:padding="8dp"
                    app:tint="@color/btn_icon_tint"
                    android:src="@drawable/ic_school"
                    android:contentDescription="@string/learn_to_play" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/learn_to_play"
                    android:textAllCaps="true"
                    android:letterSpacing="0.15"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/btn_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/version_text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/version_text" />

    <!-- Game by / Company logo section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvGameBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_by_label"
            android:textColor="@color/version_text"
            android:textSize="12sp" />

        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_icon_glow" />

            <ImageView
                android:id="@+id/ivCompanyLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_icon_tile"
                android:scaleType="centerInside"
                android:src="@drawable/kelunie"
                android:contentDescription="@string/company_name" />
        </FrameLayout>
    </LinearLayout>

    <!-- Donations section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvDonationsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/donations_title"
            android:textColor="@color/version_text"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/option_donate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_profile"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_icon_chip"
                    android:padding="8dp"
                    app:tint="@color/btn_icon_tint"
                    android:src="@drawable/ic_donations" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/donate_button_label"
                    android:textAllCaps="true"
                    android:letterSpacing="0.15"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/btn_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
