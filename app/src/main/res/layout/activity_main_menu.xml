<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_surface"
    android:padding="24dp">

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="40dp"
                android:paddingBottom="24dp">

                <FrameLayout
                    android:layout_width="96dp"
                    android:layout_height="96dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_icon_glow" />

                    <ImageView
                        android:id="@+id/ivAppIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_icon_tile"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_main_menu" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="CHESSKEL"
                    android:textAllCaps="true"
                    android:textSize="34sp"
                    android:letterSpacing="0.2"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_title_underline" />
            </LinearLayout>

            <!-- Opciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/option_ai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_ai"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_chip"
                            android:padding="8dp"
                            android:tint="@color/btn_icon_tint"
                            android:src="@drawable/ic_smart_toy" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/playervsia"
                            android:textAllCaps="true"
                            android:letterSpacing="0.15"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/btn_text" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option_pvp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_btn_pvp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_chip"
                            android:padding="8dp"
                            android:tint="@color/btn_icon_tint"
                            android:src="@drawable/ic_groups" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/playervsplayer"
                            android:textAllCaps="true"
                            android:letterSpacing="0.15"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/btn_text" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_btn_profile"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_chip"
                            android:padding="8dp"
                            android:tint="@color/btn_icon_tint"
                            android:src="@drawable/ic_person" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/profilelabel"
                            android:textAllCaps="true"
                            android:letterSpacing="0.15"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/btn_text" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/version_text"
                android:text="@string/version_text" />
        </LinearLayout>
    </ScrollView>

    <!-- Mueve el botón al FINAL para que quede encima; añade elevación -->
    <ImageButton
        android:id="@+id/btnTheme"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="end|top"
        android:layout_margin="8dp"
        android:background="@drawable/bg_toggle_button"
        android:padding="10dp"
        android:contentDescription="@string/theme_toggle"
        android:tint="?android:textColorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:elevation="12dp" />
</FrameLayout>