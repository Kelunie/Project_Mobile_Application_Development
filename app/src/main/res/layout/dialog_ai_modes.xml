<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/labelAiTitle"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <LinearLayout
            android:id="@+id/mode_easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/AiModeEasy" android:textSize="16sp" />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/elo_range_easy" android:textSize="12sp" android:textColor="#888888"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="8dp"/>

        <LinearLayout
            android:id="@+id/mode_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/AiModeNormal" android:textSize="16sp" />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/elo_range_normal" android:textSize="12sp" android:textColor="#888888"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="8dp"/>

        <LinearLayout
            android:id="@+id/mode_hard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/AiModeHard" android:textSize="16sp" />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/elo_range_hard" android:textSize="12sp" android:textColor="#888888"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="8dp"/>

        <LinearLayout
            android:id="@+id/mode_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/AiModePro" android:textSize="16sp" />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/elo_range_pro" android:textSize="12sp" android:textColor="#888888"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
