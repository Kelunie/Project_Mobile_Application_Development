<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_main_surface">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLearningTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:text="@string/learn_to_play"
                android:textAllCaps="true"
                android:textColor="?android:textColorPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:letterSpacing="0.15" />

            <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_title_underline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <!-- Pawn -->
                <LinearLayout
                    android:id="@+id/option_lesson_pawn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_ai"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lesson_pawn_title"
                        android:textAllCaps="true"
                        android:textColor="@color/btn_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.12" />
                </LinearLayout>

                <!-- Bishop -->
                <LinearLayout
                    android:id="@+id/option_lesson_bishop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_ai"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lesson_bishop_title"
                        android:textAllCaps="true"
                        android:textColor="@color/btn_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.12" />
                </LinearLayout>

                <!-- Knight -->
                <LinearLayout
                    android:id="@+id/option_lesson_knight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_ai"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lesson_knight_title"
                        android:textAllCaps="true"
                        android:textColor="@color/btn_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.12" />
                </LinearLayout>

                <!-- Rook -->
                <LinearLayout
                    android:id="@+id/option_lesson_rook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_ai"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lesson_rook_title"
                        android:textAllCaps="true"
                        android:textColor="@color/btn_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.12" />
                </LinearLayout>

                <!-- Queen -->
                <LinearLayout
                    android:id="@+id/option_lesson_queen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_ai"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lesson_queen_title"
                        android:textAllCaps="true"
                        android:textColor="@color/btn_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.12" />
                </LinearLayout>

                <!-- King -->
                <LinearLayout
                    android:id="@+id/option_lesson_king"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_ai"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lesson_king_title"
                        android:textAllCaps="true"
                        android:textColor="@color/btn_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.12" />
                </LinearLayout>

                <!-- Moves -->
                <LinearLayout
                    android:id="@+id/option_lesson_moves"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_ai"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lesson_moves_title"
                        android:textAllCaps="true"
                        android:textColor="@color/btn_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.12" />
                </LinearLayout>

                <!-- Rules -->
                <LinearLayout
                    android:id="@+id/option_lesson_rules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_ai"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lesson_rules_title"
                        android:textAllCaps="true"
                        android:textColor="@color/btn_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.12" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>

