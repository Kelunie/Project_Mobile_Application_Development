<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo con ligero gradiente gótico/rock -->
    <gradient
        android:startColor="@color/ai_start"
        android:endColor="@color/ai_end"
        android:angle="90" />

    <!-- Bordes redondeados -->
    <corners android:radius="10dp" />

    <!-- Borde del botón -->
    <stroke
        android:width="1dp"
        android:color="@color/btn_border" />

    <!-- Padding interno -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
